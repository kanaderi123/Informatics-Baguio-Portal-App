<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="About Us"
            android:fontFamily="@font/eurostile"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#19325B"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/topradius"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OUR MISSION &amp; VISION"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerColor="@color/white"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“We are the most preferred and leading private educational institution offering IT-enhanced programs transforming students to globally competitive individuals who can be innovators of the world.”"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"/>

    </LinearLayout>

</FrameLayout>
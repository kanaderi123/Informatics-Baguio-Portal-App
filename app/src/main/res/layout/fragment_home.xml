<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/adminlogo">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Welcome Admin"
            android:fontFamily="@font/eurostile"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#24272A"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="What would you like to do?"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#24272A"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/topradius"
        android:layout_marginTop="140dp"
        android:padding="20dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--button1-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Students"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white">
                    <Button
                        android:id="@+id/btn_add_student"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Add"
                        android:fontFamily="@font/montserrat"
                        android:textSize="17sp"
                        android:backgroundTint="#1374C8"
                        android:onClick="onButtonClick">
                    </Button>
                </androidx.cardview.widget.CardView>
                <!--button2-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#19325B"
                        android:hint="View/Modify"
                        android:fontFamily="@font/montserrat"
                        android:textSize="17sp">
                    </Button>
                </androidx.cardview.widget.CardView>
                <!--button3-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subjects"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#1374C8"
                        android:hint="Add/Modify"
                        android:fontFamily="@font/montserrat"
                        android:textSize="17sp">
                    </Button>
                </androidx.cardview.widget.CardView>
                <!--button4-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#19325B"
                        android:hint="Add/Modify"
                        android:fontFamily="@font/montserrat"
                        android:textSize="17sp">
                    </Button>
                </androidx.cardview.widget.CardView>
                <!--button5-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#1374C8">
                    </Button>
                </androidx.cardview.widget.CardView>
                <!--button6-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#19325B">
                    </Button>
                </androidx.cardview.widget.CardView>
                <!--button7-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#1374C8">
                    </Button>
                </androidx.cardview.widget.CardView>
                <!--button8-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#19325B">
                    </Button>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>




</FrameLayout>